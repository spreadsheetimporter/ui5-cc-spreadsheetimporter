<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
  <Dialog
    title="{i18n>spreadsheetimporter.odataMessageDialogTitle}"
    resizable="true"
    state="{info>/dialogState}"
    verticalScrolling="false"
    contentHeight="50%"
    contentWidth="50%"
  >
    <content>
      <MessageView items="{message>/}">
        <MessageItem type="{message>type}" title="{message>message}" subtitle="{message>additionalText}" description="{message>description}" />
      </MessageView>
    </content>
    <buttons>
      <Button press=".onCloseMessageDialog" text="Close" />
    </buttons>
  </Dialog>
</core:FragmentDefinition>
